<h1>New Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content, label: "Review", input_html: {class: "form-control"} %>
<%= f.input :rating, label: "Rating", as: :select, collection: (0..5).to_a,
input_html:{class: "form-cntrol"} %>
<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
